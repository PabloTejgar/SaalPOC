@model IEnumerable<Saal.API.DTO.Response.RestaurantResponse>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Restaurant List";
}

<h2>Restaurant List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Address</td>
                <td>@restaurant.Phone</td>
            </tr>
        }
    </tbody>
</table>

<!-- Refresh Button -->
<form method="get">
    <button asp-controller="Restaurantmvc" asp-action="Index" type="submit" class="btn btn-secondary">Refresh</button>
</form>

<h2>Add New Restaurant</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required>
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" required>
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" name="Phone" required>
    </div>
    <button asp-controller="Restaurantmvc" asp-action="Create" type="submit" class="btn btn-secondary">Add</button>
</form>