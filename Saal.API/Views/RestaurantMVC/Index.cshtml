@model Saal.API.ViewModel.RestaurantViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Restaurant List";
}

<style>
    .refresh-button {
        background-color: #04AA6D;
        border: 1px solid #04AA6D;
        border-radius: 5px;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        margin-top: 8px;
        vertical-align: middle; 
        line-height: 1; 
        height: auto;
    }
</style>

<h2>Restaurant List</h2>

<table class="table" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">Name</th>
            <th style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">Address</th>
            <th style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">Phone</th>
            <th style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr style="background-color: #ffffff;">
                <td style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">@restaurant.Name</td>
                <td style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">@restaurant.Address</td>
                <td style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">@restaurant.Phone</td>
                <td style="text-align:left; padding: 8px; border-bottom: 1px solid #ddd;">@restaurant.City</td>
            </tr>
        }
    </tbody>
</table>

<!-- Refresh Button -->
<form method="get">
    <button class ="refresh-button" asp-controller="Restaurantmvc" asp-action="Index" type="submit">Refresh</button>
</form>

<h2>Add New Restaurant</h2>

<form method="post">
    <table class="table form-table">
        <tbody>
            <tr>
                <td><label for="Name">Name</label></td>
                <td><input type="text" class="form-control" id="Name" name="Name" required></td>
            </tr>
            <tr>
                <td><label for="Address">Address</label></td>
                <td><input type="text" class="form-control" id="Address" name="Address" required></td>
            </tr>
            <tr>
                <td><label for="Phone">Phone</label></td>
                <td><input type="text" class="form-control" id="Phone" name="Phone" required></td>
            </tr>
            <tr>
                <td><label for="CityId">City</label></td>
                <td>
                    <select class="form-control" id="CityId" name="CityId" required>
                        @foreach (var city in Model.Cities)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="refresh-button" asp-controller="Restaurantmvc" asp-action="Create" type="submit">Add</button>
</form>